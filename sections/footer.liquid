<div class="section-background color-{{ section.settings.color_scheme }} section-{{ section.id }}"></div>
<div
  class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
>
  {% liquid
    assign total_blocks = section.blocks.size

    # Grid layout calculations
    assign grid_columns = total_blocks | at_most: 4

    # Calculate last row counts using modulo arithmetic
    # last_row_count = (total_blocks - 1) % N + 1
    assign last_row_count = total_blocks | minus: 1 | modulo: 4 | plus: 1
    assign tablet_last_row_count = total_blocks | minus: 1 | modulo: 3 | plus: 1

    # Check if there are orphaned elements (single item in last row)
    assign has_isolated_grid_item_desktop = false
    assign has_isolated_grid_item_tablet = false

    if total_blocks > 4 and last_row_count == 1
      assign has_isolated_grid_item_desktop = true
    endif

    if total_blocks > 3 and tablet_last_row_count == 1
      assign has_isolated_grid_item_tablet = true
    endif
  %}
  <div
    class="
      footer-content
      spacing-style
      {% if has_isolated_grid_item_desktop %}footer-content--isolated-grid-item-desktop{% endif %}
      {% if has_isolated_grid_item_tablet %}footer-content--isolated-grid-item-tablet{% endif %}

      {% if template == 'collection' or template == 'list-collections' %}
        bg-custom-pink
      {% else %}
        bg-[#89b9e4]
      {% endif %}

      rounded-2xl
      !mt-[80px]
      !py-[48px]
      !px-[24px]
      md:!px-[72px]
    "
    style="
      {%  render 'spacing-style', settings: section.settings %}
      --footer-gap: {{ section.settings.gap }}px;
      --grid-columns: {{ grid_columns }};
      --last-row-count: {{ last_row_count }};
      --tablet-last-row-count: {{ tablet_last_row_count }};
    "
  >
    {% content_for 'blocks' %}
  </div>
</div>

{% style %}
  /* Mobile: Single column layout (base styles) */
  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--footer-gap);
  }

  .mobile-column {
    align-items: center;
  }

  .details-content {
    text-align: center;
  }

  .footer-content .text-block.h4 p {
    font-size: 20px !important;
    padding-bottom: 15px;
    text-align: center;
  }

  .footer-content p {
    font-size: 15px;
    text-align: center;
  }

  .email-signup__input--underline::placeholder {
    color: #2b348b99 !important;
    font-size: 18px !important;
  }

  .email-signup__input--underline {
    border-bottom: 1px solid #2b348b3d !important;
    box-shadow: none !important;
  }

  .email-signup__button {
    color: var(--custom-blue) !important;
    font-size: 14px !important;
    font-weight: 700 !important;
  }

  footer:last-of-type {
    margin-top: 96px;
    border-top: 2px solid #bf1f41;
  }

  footer:last-of-type .footer-content {
    margin: 64px 0 !important;
    padding: 0 !important;
  }

  footer:last-of-type,
  footer:last-of-type .footer-content,
  footer:last-of-type .group-block-content {
    background: #f697b4;
  }

  footer:last-of-type .group-block-content {
    gap: 24px;
  }

  footer:last-of-type *,
  footer:last-of-type .footer-content *,
  footer:last-of-type .group-block-content * {
    color: #bf1f41;
  }

  footer:last-of-type ~ .shopify-section-group-footer-group {
    margin-top: 0;
    border: 0;
    background: #f697b4;
  }

  footer:last-of-type ~ .shopify-section-group-footer-group .custom-section-content {
    color: #bf1f41;
    border-top: 1px solid #bf1f41;
    font-size: 14px;
  }

  footer:last-of-type ~ .shopify-section-group-footer-group .custom-section-content .image-block {
    width: 89px;
    justify-content: flex-end;
  }

  footer:last-of-type ~ .shopify-section-group-footer-group .custom-section-content .image-block img {
    display: block;
    margin: auto;
  }

  {% if template == 'collection' or template == 'list-collections' %}
    footer:first-of-type .footer-content * {
      color: #FFF9E9 !important;
    }

    .email-signup__input {
      border-bottom: 1px solid #FFF9E9!important;
    }

    .email-signup__input::placeholder {
      color: #FFF9E999 !important;
    }
  {% endif %}

  @media screen and (min-width: 750px) {
    .mobile-column {
      align-items: flex-start;
    }

    .details-content {
      text-align: left;
    }

    .footer-content .text-block.h4 p {
      font-size: 32px !important;
      text-align: left;
    }

    .footer-content p {
      text-align: left;
    }

    .shopify-section-group-footer-group:last-of-type .group-block-content {
      column-gap: 100px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .footer-content {
      grid-template-columns: repeat(min(var(--grid-columns), 3), 1fr);
      grid-auto-flow: row;
    }
    .footer-content--isolated-grid-item-tablet > :last-child {
      grid-column: 1 / -1;
    }
  }

  @media screen and (min-width: 990px) {
    .footer-content {
      grid-template-columns: repeat(var(--grid-columns), 1fr);
    }

    /* Single item centered */
    .footer-content[style*='--grid-columns: 1'] {
      justify-items: center;
    }

    .footer-content--isolated-grid-item-desktop > :last-child {
      grid-column: 1 / -1;
    }
  }
{% endstyle %}

