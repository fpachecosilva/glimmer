<div class="equilibrio section-{{ section.id }} section section--page-width py-[50px]">
  {% if section.settings.title %}
    <p class="text-block h4 text-center w-full md:!w-[580px] mx-auto">
      {{ section.settings.title }}
    </p>
  {% endif %}
  <div class="wrapper-blocos flex flex-col md:flex-row justify-center px-[16px]">
    <div class="bloco-icones-esq flex flex-col md:!gap-[60px] justify-center text-center order-2 md:order-1">
      {% for block in section.blocks %}
        {% if block.type == 'block' %}
          <div class="bloco-conteudo flex flex-row md:flex-col items-center">
            <div class="bloco-imagem">
              {% if block.settings.imagem %}
                {{-
                  block.settings.imagem
                  | image_url: width: 80
                  | image_tag:
                    width: block.settings.imagem.width,
                    widths: '80, 120, 240',
                    height: block.settings.imagem.height,
                    class: 'w-[40px] md:w-[80px] mx-auto',
                    alt: shop.name,
                    sizes: '(min-width: 750px) calc(var(--logo-width)), 100vw'
                -}}
              {% endif %}
            </div>
            <div class="bloco-textos md:w-[336px] text-left md:!text-center">
              <p class="text-[18px] md:-text-[24px] text-custom-blue font-lastik">{{ block.settings.title }}</p>
              <p class="text-[15px] md:-text-[16px] text-custom-blue">{{ block.settings.subtitle }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="bloco-central flex flex-col items-center order-1 md:order-2">
      {% if section.settings.bloco_central_img %}
        {{-
          section.settings.bloco_central_img
          | image_url: width: 1200
          | image_tag:
            width: section.settings.bloco_central_img.width,
            widths: '240, 352, 832, 1200, 1600, 1920, 2560, 3840',
            height: section.settings.bloco_central_img.height,
            class: 'md:h-[500px] object-cover mb-[30px]',
            alt: shop.name,
            sizes: '(min-width: 750px) calc(var(--logo-width)), 100vw'
        -}}

        <a class="button mt-[30px] !hidden md:!block md:min-w-[320px]" href="{{ section.settings.central_btn_url }}">
          {{- section.settings.central_btn_text -}}
        </a>
      {% endif %}
    </div>
    <div class="bloco-icones-dir flex flex-col md:!gap-[60px] justify-center text-center order-3 md:order-3">
      {% for block in section.blocks %}
        {% if block.type == 'block_dir' %}
          <div class="bloco-conteudo flex flex-row md:flex-col items-center">
            <div class="bloco-imagem">
              {% if block.settings.imagem %}
                {{-
                  block.settings.imagem
                  | image_url: width: 80
                  | image_tag:
                    width: block.settings.imagem.width,
                    widths: '80, 120, 240',
                    height: block.settings.imagem.height,
                    class: 'w-[40px] md:w-[80px] mx-auto',
                    alt: shop.name,
                    sizes: '(min-width: 750px) calc(var(--logo-width)), 100vw'
                -}}
              {% endif %}
            </div>
            <div class="bloco-textos md:w-[336px] text-left md:!text-center">
              <p class="text-[18px] md:-text-[24px] text-custom-blue font-lastik">{{ block.settings.title }}</p>
              <p class="text-[15px] md:-text-[16px] text-custom-blue">{{ block.settings.subtitle }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% style %}
  @media screen and (min-width: 750px) {
  	.section-{{ section.id }} {
  		padding-top: {{ section.settings.padding-block-start }}px;
  		padding-bottom: {{ section.settings.padding-block-end }}px;
  	}
  }
{% endstyle %}

{% schema %}
{
  "name": "Equilibrio",
  "blocks": [
    {
      "type": "block",
      "name": "Blocos Esquerda",
      "settings": [
        {
          "type": "image_picker",
          "id": "imagem",
          "label": "Imagem"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Ingredientes naturais"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Texto",
          "default": "Feita com extratos e frutas de verdade para um sabor leve e autêntico."
        }
      ]
    },
    {
      "type": "block_dir",
      "name": "Blocos Direita",
      "settings": [
        {
          "type": "image_picker",
          "id": "imagem",
          "label": "Imagem"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Ingredientes naturais"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Texto",
          "default": "Feita com extratos e frutas de verdade para um sabor leve e autêntico."
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Pra quem busca equilíbrio sem abrir mão do prazer"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Texto do botão",
      "default": "COMPRAR AGORA"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Link do botão"
    },
    {
      "type": "header",
      "content": "Bloco Central"
    },
    {
      "type": "image_picker",
      "id": "bloco_central_img",
      "label": "Imagem"
    },
    {
      "type": "text",
      "id": "central_btn_text",
      "label": "Texto do botão",
      "default": "COMPRAR AGORA"
    },
    {
      "type": "url",
      "id": "central_btn_url",
      "label": "Link do botão"
    }
  ],
  "presets": [
    {
      "name": "Equilibrio"
    }
  ]
}
{% endschema %}
